@model List<Tozepty.Models.CustomerViewModel>
@{
    ViewBag.Title = "Customer Details";
}

<h2>Customer Details</h2>

<div class="container">
    <h2>Customer Details</h2>
    <table class="table">
        <tr>
            <th>Customer ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>First Name</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Phone Number</th>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <th>User Name</th>
            <td>@Model.UserName</td>
        </tr>
    </table>
</div>